<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.collectdata.DataExePirFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/serie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_blue_200"
                android:text="Serie :"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/textSerie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_blue_200"
                android:inputType="textPersonName"
                android:ems="2"
                android:gravity="center"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/repetitionStart"
                android:layout_width="wrap_content"
                android:textColor="@color/light_blue_200"
                android:layout_height="wrap_content"
                android:text="Inizio:"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/repetitionStartText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_blue_200"
                android:inputType="textPersonName"
                android:ems="2"
                android:gravity="center"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/peak"
                android:textColor="@color/light_blue_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Picco :"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/peakText"
                android:layout_width="wrap_content"
                android:textColor="@color/light_blue_200"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="2"
                android:gravity="center"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recoverSeries"
                    android:layout_width="wrap_content"
                    android:textColor="@color/light_blue_200"
                    android:layout_height="wrap_content"
                    android:text="Recupero serie:"
                    android:textSize="20sp"
                    />

                <NumberPicker
                    android:id="@+id/textRecoverSeries"
                    android:textColor="@color/light_blue_200"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>


                <TextView
                    android:id="@+id/recover"
                    android:layout_width="wrap_content"
                    android:textColor="@color/light_blue_200"
                    android:layout_height="wrap_content"
                    android:text="Recupero :"
                    android:textSize="20sp"
                    android:layout_marginLeft="12dp"
                    />

                <EditText
                    android:id="@+id/recoverText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_blue_200"
                    android:inputType="textPersonName"
                    android:ems="3"
                    android:textSize="20sp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>