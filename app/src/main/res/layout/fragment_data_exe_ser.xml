<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.collectdata.DataExeSerFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/serie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_blue_200"
                android:text="Serie :"
                android:textSize="20sp"
                android:layout_marginLeft="12dp"
                />

            <EditText
                android:id="@+id/textSerie"
                android:layout_width="wrap_content"
                android:textColor="@color/light_blue_200"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="2"
                android:gravity="center"
                android:textSize="20sp"
                />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/ripetizioni"
                android:layout_width="wrap_content"
                android:textColor="@color/light_blue_200"
                android:layout_height="wrap_content"
                android:text="Ripetizioni:"
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/textRipetizioni"
                android:layout_width="wrap_content"
                android:textColor="@color/light_blue_200"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="2"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginRight="12dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recupero"
                android:textColor="@color/light_blue_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recupero :"
                android:textSize="20sp"
                android:layout_marginLeft="12dp"
                />

            <NumberPicker
                android:id="@+id/recoverText"
                android:textColor="@color/light_blue_200"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>