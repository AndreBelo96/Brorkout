<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.collectdata.DataExeSerFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/serie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_blue_200"
                android:text="Serie :"
                android:layout_marginRight="@dimen/_5sdp"
                android:textSize="15sp"
                />

            <EditText
                android:id="@+id/textSerie"
                android:layout_width="wrap_content"
                android:textColor="@color/light_blue_200"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="2"
                android:gravity="center"
                android:backgroundTint="@color/light_blue_200"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/ripetizioni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_blue_200"
                android:text="Ripetizioni:"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:textSize="15sp"
                />

            <EditText
                android:id="@+id/textRipetizioni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_blue_200"
                android:inputType="textPersonName"
                android:backgroundTint="@color/light_blue_200"
                android:gravity="center"
                android:ems="2"
                android:textSize="15sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recupero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_blue_200"
                android:layout_marginRight="@dimen/_5sdp"
                android:text="@string/recupero"
                android:textSize="15sp"
                />

            <EditText
                android:id="@+id/recoverText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:gravity="center"
                android:backgroundTint="@color/light_blue_200"
                android:inputType="textPersonName"
                android:textColor="@color/light_blue_200"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_blue_200"
                android:text="@string/quote"
                android:textSize="15sp"
                />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>