<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue_200"
    tools:context=".fragment.creator.CollectDataExeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/labelNomeEsercizio"
                    android:layout_width="wrap_content"
                    android:textColor="@color/light_blue_200"
                    android:layout_height="wrap_content"
                    android:text="Esercizio :"
                    android:textSize="15sp"
                    android:layout_marginRight="@dimen/_5sdp"
                    />

                <EditText
                    android:id="@+id/textNomeEsercizio"
                    android:layout_width="wrap_content"
                    android:textColor="@color/light_blue_200"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="6"
                    android:text=""
                    android:backgroundTint="@color/light_blue_200"
                    android:textSize="15sp"
                    android:layout_marginRight="@dimen/_5sdp"
                    />


                <CheckBox
                    android:id="@+id/checkBoxVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Video"
                    android:textColor="@color/light_blue_200"
                    android:textSize="15sp"
                    app:buttonIconTint="@color/light_blue_200" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/labelIndicazioniEsercizio"
                    android:layout_width="wrap_content"
                    android:textColor="@color/light_blue_200"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textSize="15sp"
                    android:text="Indicazioni :"
                    />

                <EditText
                    android:id="@+id/textIndicazioniEsercizio"
                    android:backgroundTint="@color/light_blue_200"
                    android:layout_width="match_parent"
                    android:textColor="@color/light_blue_200"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textSize="15sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tipoEsercizio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_blue_200"
                    android:text="Tipologia :"
                    android:textSize="15sp"
                    />

                <Spinner
                    android:id="@+id/choiceExerciseType"
                    android:textColor="@color/light_blue_200"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/exerciseType"/>

            </LinearLayout>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainerTipoEsercizio"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center">

                <Button
                    android:id="@+id/createExe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aggiungi"
                    android:textSize="15sp"
                    android:textColor="@color/light_blue_200"
                    android:background="@drawable/circled_button"
                    app:backgroundTint="@color/light_blue_200"
                    android:layout_marginRight="@dimen/_6sdp"
                    />

                <Button
                    android:id="@+id/deleteExe"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:textColor="@color/light_blue_200"
                    android:background="@drawable/circled_button"
                    app:backgroundTint="@color/light_blue_200"
                    android:text="Elimina"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/pasteDay"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:text="Incolla giornata"
                    android:textSize="15sp"
                    android:textColor="@color/light_blue_200"
                    android:background="@drawable/circled_button"
                    app:backgroundTint="@color/light_blue_200"
                    android:layout_marginRight="@dimen/_6sdp"
                    />

                <Button
                    android:id="@+id/copyDay"
                    android:layout_width="@dimen/_100sdp"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:textColor="@color/light_blue_200"
                    android:background="@drawable/circled_button"
                    app:backgroundTint="@color/light_blue_200"
                    android:text="Copia giornata"
                    />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="@dimen/_160sdp"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/eserciziScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/layoutSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>