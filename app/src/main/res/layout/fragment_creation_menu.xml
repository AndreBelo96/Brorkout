<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue_200"
    tools:context=".fragment.schedule_creator.CreationMenuFragment">

    <LinearLayout
        android:id="@+id/layoutDecisione"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">

            <Switch
                android:id="@+id/switchDb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:showText="false"
                android:switchPadding="@dimen/_10sdp"
                android:text="Local"
                android:textColor="@color/light_blue_200"
                android:thumbTint="@color/light_blue_200"
                android:visibility="visible"
                tools:checked="false" />


            <Switch
                android:id="@+id/switchPrivate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:showText="false"
                android:switchPadding="@dimen/_10sdp"
                android:text="Private"
                android:width="@dimen/_80sdp"
                android:textColor="@color/light_blue_200"
                android:layout_marginLeft="@dimen/_10sdp"
                android:thumbTint="@color/light_blue_200" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">


            <TextView
                android:id="@+id/TextCreation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Desideri creare una nuova scheda oppure copiarne una giÃ  esistente?"
                android:textColor="@color/light_blue_200"
                android:layout_marginBottom="@dimen/_30sdp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/new_schedule_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20sdp"
                android:text="Crea una nuova scheda"
                android:textColor="@color/light_blue_200"
                android:background="@drawable/circled_button"
                app:backgroundTint="@color/light_blue_200"
                android:textSize="20sp" />

            <Button
                android:id="@+id/copy_schedule_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copia da scheda esistente"
                android:textColor="@color/light_blue_200"
                android:background="@drawable/circled_button"
                app:backgroundTint="@color/light_blue_200"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>