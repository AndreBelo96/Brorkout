<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundMenu"
    tools:context=".plans_creation.view.collect_data.DataExeTenFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:text="Serie :"
                        android:textSize="20sp"/>

                    <EditText
                        android:id="@+id/textSerie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:inputType="textPersonName"
                        android:ems="2"
                        android:gravity="center"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_height="wrap_content"
                        android:text="Tempo di esecuzione:"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/textExecutionTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:inputType="textPersonName"
                        android:ems="2"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_marginRight="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:text="@string/quote"
                        android:textSize="20sp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_height="wrap_content"
                        android:text="Ripetizioni:"
                        android:textSize="20sp"
                        />

                    <EditText
                        android:id="@+id/textRipetizioni"
                        android:layout_width="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="2"
                        android:gravity="center"
                        android:textSize="20sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_height="wrap_content"
                        android:text="Recupero :"
                        android:textSize="20sp"
                        android:layout_marginLeft="12dp"/>

                    <EditText
                        android:id="@+id/recoverText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:inputType="textPersonName"
                        android:ems="2"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:text="@string/quote"
                        android:textSize="20sp"/>

                </LinearLayout>

            </LinearLayout>

    </LinearLayout>

</FrameLayout>