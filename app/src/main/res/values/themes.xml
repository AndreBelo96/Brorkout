<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Brorkout" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/light_blue_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue_200</item>
        <item name="colorSecondaryVariant">@color/light_blue_700</item>
        <item name="colorOnSecondary">@color/blue_700</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="buttonStyle">@style/prova</item>

    </style>

    <style name="Theme.Brorkout.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Brorkout" parent="Base.Theme.Brorkout" />

    <style name="prova" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@color/text_color</item>

    </style>
</resources>